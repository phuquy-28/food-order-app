<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.foodorderapp">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />

    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW"/>
            <category android:name="android.intent.category.DEFAULT"/>
            <data android:scheme="https" />
        </intent>
    </queries>

    <application
        android:name="com.example.foodorderapp.ControllerApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.foodorderapp.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.foodorderapp.activity.MainActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.FoodDetailActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.SignUpActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.SignInActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.ForgotPasswordActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.ChangePasswordActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.AdminMainActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.OrderHistoryActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.AddFoodActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.AdminReportActivity"
            android:exported="false"/>
    </application>

</manifest>